@model InfoTrackSearch.Models.SearchQuery

@{
    ViewData["Title"] = "InfoTrack SEO Search";
}

<h2>InfoTrack Search</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Keywords" class="control-label"></label>
                <input asp-for="Keywords" class="form-control" placeholder="online title search" />
                <span asp-validation-for="Keywords" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SearchForUrl" class="control-label"></label>
                <input asp-for="SearchForUrl" class="form-control" placeholder="https://www.infotrack.com.au" />
                <span asp-validation-for="SearchForUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                Google: @Html.RadioButtonFor(m => m.SearchEngine, "Google")
                Bing: @Html.RadioButtonFor(m => m.SearchEngine, "Bing")
                <input type="submit" value="Search" class="btn btn-primary" style="float: right"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}